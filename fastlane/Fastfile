default_platform(:android)

FIREBASE_APP_ID_ANDROID = "1:662621136369:android:6432ebcc848c3cf6079050"
FIREBASE_APP_ID_IOS = "1:662621136369:ios:742cbabbf4bef0ee079050"

platform :android do
  desc "Build and distribute Android app via Firebase App Distribution"
  lane :distribute do
    sh("cd ../.. && flutter build apk --release")

    firebase_app_distribution(
      app: FIREBASE_APP_ID_ANDROID,
      apk_path: "../build/app/outputs/flutter-apk/app-release.apk",
      service_credentials_file: ENV["FIREBASE_SERVICE_ACCOUNT_KEY_PATH"],
      groups: "testers"
    )
  end
end

platform :ios do
  desc "Build and distribute iOS app via Firebase App Distribution"
  lane :distribute do
    setup_ci if ENV["CI"]

    sh("cd ../.. && flutter build ios --release --no-codesign")

    build_app(
      workspace: "ios/Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "ad-hoc",
      output_directory: "build/ios",
      output_name: "Runner.ipa",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.jellomark.mobile.owner.mobileOwner" => ENV["IOS_PROVISIONING_PROFILE_NAME"] || "match AdHoc com.jellomark.mobile.owner.mobileOwner"
        }
      }
    )

    firebase_app_distribution(
      app: FIREBASE_APP_ID_IOS,
      ipa_path: "build/ios/Runner.ipa",
      service_credentials_file: ENV["FIREBASE_SERVICE_ACCOUNT_KEY_PATH"],
      groups: "testers"
    )
  end
end
